<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mp.zico.org.sqlchart.MainActivity">

    <EditText
        android:id="@+id/inputTextX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="X - values"
        android:inputType="number" />

    <EditText
        android:id="@+id/inputTextY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/inputTextX"
        android:ems="10"
        android:hint="Y - values"
        android:inputType="number" />

    <com.jjoe64.graphview.GraphView
        android:layout_width="368dp"
        android:layout_height="400dp"
        android:id="@+id/graph"
        android:layout_below="@+id/inputTextY"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/graph"
        android:layout_alignEnd="@+id/graph"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="21dp"
        android:text="INSERT" />


</RelativeLayout>
